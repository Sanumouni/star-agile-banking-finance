pipeline {
  agent any

  tools {
    maven 'M2_HOME'
    }
  
  stages {
    stage('CheckOut') {
      steps {
        echo 'Checkout the source code from GitHub'
	git 'https://github.com/Sanumouni/star-agile-banking-finance.git'
            }
    }
    
    stage('Package the Application') {
      steps {
        echo " Packaging the Application"
        sh 'mvn clean package'
            }
        }

    stage('publishing HTML report using TestNG') {
      steps {
        echo 'publishing the Reports'
        testNG reportFilenamePattern: '**/target/testng-results.xml'  
                                   } 
             }
  post {
      always {
          junit 'testng-output/*.xml'
          publishTestNGReports reportDirs: '**/target/testng-results.xml'
               }
            }
       }
}

